{% extends "base.html.twig" %}
{% block title %}
    Select featured products
{% endblock %}
{% block body %}

    <table class="table">
        {% for product in products %}
            <tr>
                <td>Product: {{ product.name }}</td>
                <td>Product price:{{ product.price }}</td>
                {% if product.featured %}
                    <td><a href="{{ path('unfeature_product') }}?id={{ product.id }}">Remove from featured products</a></td>
                {% else %}
                    <td><a href="{{ path('make_product_featured') }}?id={{ product.id }}">Add to featured products</a></td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>

{%  endblock %}
